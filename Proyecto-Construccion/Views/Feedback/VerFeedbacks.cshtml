@model List<Proyecto_Construccion.Models.Feedback>

@{
    ViewData["Title"] = "Feedbacks del Negocio";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Comentario</th>
            <th>Calificación</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var fb in Model)
            {
                <tr>
                    <td>@fb.Comentario</td>
                    <td>@fb.Calificacion</td>
                    <td>@fb.Fecha.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3" class="text-center">No hay feedbacks para este negocio.</td></tr>
        }
    </tbody>
</table>
